#!/usr/bin/env bash

# Update package list and install Nginx
sudo apt update
sudo apt install -y nginx

# Create a backup of the original Nginx configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Use sed to add the redirection rule to the configuration file
sudo sed -i '/location \/ {/a \\
    location /redirect_me {\\
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\\
    }' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo systemctl restart nginx

echo "Nginx has been configured to redirect /redirect_me to https://www.youtube.com/watch?v=QH2-TGUlwu4 with a 301 Moved Permanently status."
